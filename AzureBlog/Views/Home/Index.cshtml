
<div class="subCatParent">
    
   
    @foreach (var article in @ViewBag.Articles)
    {
        <a style="background-image:url('@article.ArticlePic');" class="articleParent" href="~/@article.ArticleSlug">
        </a>
    }

</div>

 

@if (User.IsInRole("Admin"))
{
    <h3>New Article!</h3>
        <form action="~/Default/Article/CreateArticle">
            <input name="name" placeholder="Article Title" />
            <input name="slug" placeholder="Article Slug" />
            <input name="pic" placeholder="Article Pic" />
            <button>MakeIt</button>
        </form>

}

