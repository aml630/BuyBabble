@model AzureBlog.Models.ArticleModel

  @if (User.IsInRole("Admin"))
        {
<h2>Add New Segment</h2>
<form class="addArticle" action="~/Default/Article/AddSegment">
    <input name="id" hidden value="@Model.ArticleId" />
    <input name="ArticleSlug" hidden value="@Model.ArticleSlug" />
    <hr />
    <input name="Title" value="Segment/Product Title" placeholder="Segment Title" />
    <hr />
    <textarea name="Body" value="Par1" placeholder="Segment Body"></textarea>
    <hr />
    <textarea name="Par2" value="Par2" placeholder="Optional Par2"></textarea>
    <hr />
    <textarea name="Par3" value="Par3" placeholder="Optional Par3"></textarea>
    <hr />
    <input name="Image" value="Optional Image" placeholder="Optional Image" />
    <hr />
    <input name="Video" value="Optional Video" placeholder="Optional Video" />
    <hr />
    <button>Add Seg</button>
</form>
        }